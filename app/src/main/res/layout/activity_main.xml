<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal"
    android:scaleType="centerCrop"

    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txthead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:fontFamily="sans-serif-black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:paddingRight="100px"
        android:paddingLeft="100px"
        >



        <ImageView
            android:id="@+id/statusDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dot_on"
            >


        </ImageView>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_cancelled"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-black"
            />


    </LinearLayout>

    <!--Linear Layout for adding textviews
        in horizontal manner-->
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="300dp"


        >

        <TextView
            android:id="@+id/startBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_transparent"
            android:padding="15dp"
            android:text="@string/start_recording"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:drawableTopCompat="@drawable/play_white" />


        <TextView
            android:id="@+id/stopBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_transparent"
            android:padding="15dp"
            android:text="@string/stop_recording"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:drawableTopCompat="@drawable/pause_white" />

        <TextView
            android:id="@+id/settingsBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners_transparent"
            android:padding="15dp"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:drawableTopCompat="@drawable/settings_white"

            />
    </TableLayout>
</RelativeLayout>